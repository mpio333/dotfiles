#!/bin/sh

state=$(amixer | grep "Left: P" | awk '{print $6}')

if [ $state == '[off]' ]
then
  echo '婢'
else
  volume=$(amixer | grep "Left: P" | awk '{print substr($5, 2, length($5) - 3)}')
  case $volume in
    100)
      icon="墳"
      ;;
    [0-9])
      icon="奄"
      ;;
    [1-6]*)
      icon="奔"
      ;;
    *)
      icon="墳"
      ;;
  esac
  echo -n $icon
fi
